<?php $_shipment = $block->getShipment() ?>
<?php $_order = $block->getOrder() ?>
<?php if ($_shipment && $_order): ?>
    <div classs="table">
        <div class="mp-row mp-heading">
            <div class="mp-item">
                <span><?= /* @noEscape */
                    __('Items') ?><span>
            </div>
            <div class="mp-qty">
                <span> <?= /* @noEscape */
                    __('Qty') ?></span>
            </div>
            <div class="mp-price">
                <span><?= /* @noEscape */
                    __('Price') ?></span>
            </div>
        </div>
        <?php $i = 0 ?>
        <?php foreach ($_shipment->getAllItems() as $_item): ?>
            <?php
            $block->setItem($_item);
            $indexKey = $i % 2 == 0 ? "odd" : "even";
            if ($block->isBundleItem()) {
                echo $block->renderBundleItem($_item, $_order, $block->getShipmentType(), $indexKey, '', 'bundleitems.phtml');
                $i++;
                continue;
            }

            if ($_item->getOrderItem()->getParentItem()) {
                continue;
            }
            $i++;
            ?>
            <div class="mp-row <?= /** @noEscape */ $indexKey ?>" style="border-bottom: 1px solid #ddd;">
                <div class="mp-item">
                    <p class="product-name"><?= $block->escapeHtml($_item->getName()) ?></p>
                    <p class="sku"><?= /* @noEscape */
                        __('SKU: %1', $block->escapeHtml($block->getSku($_item))) ?></p>
                    <?php if ($block->getItemOptions()): ?>
                        <p>
                            <?php foreach ($block->getItemOptions() as $option): ?>
                                <strong><em><?= /* @noEscape */
                                    $option['label'] ?>: </em></strong><?= /* @noEscape */
                                nl2br($option['value']) ?>;
                            <?php endforeach ?>
                        </p>
                    <?php endif ?>
                    <?php $addInfoBlock = $block->getProductAdditionalInformationBlock() ?>
                    <?php if ($addInfoBlock) : ?>
                        <?= $addInfoBlock->setItem($_item->getOrderItem())->toHtml() ?>
                    <?php endif ?>
                    <?= $block->escapeHtml($_item->getDescription()) ?>
                    <?php
                    echo '<p class="mp-invoice-barcode"><barcode code="' . $block->escapeHtml($block->getSku($_item)) . '"  type="C39E" size="0.8"/></p>';
                    ?>
                </div>
                <div class="mp-qty">
                    <span><?= /* @noEscape */
                        $_item->getQty() * 1 ?></span>
                </div>
                <div class="mp-price">
                    <?= /* @noEscape */
                    $_order->formatPrice($_item->getPrice()) ?>
                </div>
            </div>
            <div class="clr"></div>
        <?php endforeach ?>
    </div>
<?php endif ?>
